{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*"]
}
